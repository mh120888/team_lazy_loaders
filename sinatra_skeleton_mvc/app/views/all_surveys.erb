<% if session[:logged_in] %>
   <form id="sign-out" method="post" action="/sessions">
    <input name="_method" type="hidden" value="delete" />
    <div class="submit"><input type="submit" value="Sign Out"></div>
  </form>
<% end %>
<h1 class="title">Your Surveys</h1>

<a href="/<%= @id %>/surveys/new">Create a new survey!</a>
<br>
<% @surveys.each do |survey| %>
	<div class="survey">
	  <h2 class="survey_name"><a href="/<%= @id %>/surveys/<%= survey.id %>/results"><%= survey.name %></a></h2>
	  Send to your friends!: <input type="text" placeholder="localhost:9393/<%= @id %>/surveys/<%= survey.id %>/"/>
	  <h4>Questions:</h4>
	  <ul class="question_list">
	  <% survey.questions.each do |question| %>
	  <li ><%= question.text %></li>
	  <% end %>
	</ul>
	</div>
<% end %>
