<h1 class="title">Your Surveys</h1>

<a href="/<%= @id %>/surveys/new">Create a new survey!</a>
<br>
<% @surveys.each do |survey| %>
	<div class="survey">
	  <h2 class="survey_name"><a href="/<%= @id %>/surveys/<%= survey.id %>/results"><%= survey.name %></a></h2>
	  <h4>Questions:</h4>
	  <ul class="question_list">
	  <% survey.questions.each do |question| %>
	  <li ><%= question.text %></li>
	  <% end %>
	</ul>
	</div>
<% end %>
